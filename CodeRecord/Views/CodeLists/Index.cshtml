@model IEnumerable<CodeRecord.Models.CodeList>

@{
    ViewBag.Title = "Index";
}

<h2>代码列表</h2>

<p>
    @Html.ActionLink("创建新代码记录", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodeName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Readmd)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CreateTime) / @Html.DisplayNameFor(model => model.UpdateTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodeName)
        </td>
        @*<td>
            @Html.TextAreaFor(modelItem => item.Code)
        </td>
        <td>
            @Html.TextAreaFor(modelItem => item.Readmd)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime) / @Html.DisplayFor(modelItem => item.UpdateTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
